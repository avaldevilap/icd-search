---
import { ViewTransitions } from "astro:transitions";
import { type Language, useTranslations } from "~/i18n/utils";

interface Props {
	title: string;
}

const t = useTranslations((Astro.currentLocale as Language) || "es");
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<meta name="description" content={t("site.meta.description")} />
		<script src="/htmx.min.js" is:inline></script>
	</head>
	<body class="antialiased bg-gradient-to-br from-emerald-100 to-emerald-50">
		<slot />
	</body>
</html>
